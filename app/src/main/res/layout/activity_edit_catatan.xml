<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCatatanActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="40dp"
        android:text="Edit Catatan"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/inputJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Isi judul catatan"
        android:minHeight="48dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/inputIsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputJudul"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Isi catatan"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:gravity="top"
        android:minHeight="48dp"
        android:padding="12dp" />

    <Button
        android:id="@+id/tombolEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputIsi"
        android:layout_marginHorizontal="20dp"
        android:minHeight="48dp"
        android:text="Simpan Catatan" />

</RelativeLayout>
